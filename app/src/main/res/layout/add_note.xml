<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include2"
        layout="@layout/toollbar_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_add_note_toolbar"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/selector_imageadd"
        app:layout_constraintTop_toBottomOf="@+id/edit_add_note"
        app:layout_constraintVertical_bias="0.974"
        app:srcCompat="@drawable/plus"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edit_add_note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:cursorVisible="true"
        android:gravity="top"
        android:hapticFeedbackEnabled="false"
        android:importantForAutofill="no"
        android:inputType="text"
        android:nestedScrollingEnabled="false"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/image_add_note_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/image_mic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_add_note_toolbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_add_note"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_mic"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>