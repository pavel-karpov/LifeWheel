<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout_note"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_note_date"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toLeftOf="@id/check_purpose"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_note"
        android:layout_below="@+id/item_note_date"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/check_purpose"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/check_purpose"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentEnd="true"
        />
    <View
        android:layout_below="@+id/item_note"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedfe0" />


</RelativeLayout>